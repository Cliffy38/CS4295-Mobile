<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="@drawable/gradient"
    android:id="@+id/background"
    android:clickable="true">

    <TextView android:text="FitBro   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:textStyle="bold|italic"
        android:textSize="60sp"
        android:background="#ff000000"
        android:textColor="#ffffffff"

        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Setting" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Setting"
        android:background="@drawable/setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backGroundPhoto"
        android:background="@drawable/home_pic"
        android:layout_above="@+id/Setting"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Work Out"
        android:id="@+id/WorkOutButton"
        android:background="@drawable/gra_botton"
        android:textSize="15sp"
        android:singleLine="true"
        android:textColor="#fff9f9f9"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="115dp"
        android:layout_below="@+id/home"
        android:layout_toEndOf="@+id/backGroundPhoto" />


</RelativeLayout>
