<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="#ff00b8ff"
    android:id="@+id/background"
    android:clickable="true">

    <TextView android:text="FitFit   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:textStyle="bold"
        android:textSize="60sp"
        android:background="#ff000000"
        android:textColor="#ffffffff"

        android:layout_marginTop="130dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I Work Out "
        android:id="@+id/WorkOutButton"
        android:textSize="20dp"
        android:background="#ff6F6F6F"
        android:textColor="#fff9f9f9"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/home"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Run"
        android:id="@+id/RunButton"
        android:textSize="20dp"
        android:layout_below="@+id/WorkOutButton"
        android:background="#ff656565"
        android:textColor="#fff9f9f9"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/WorkOutButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Setting "
        android:id="@+id/SettingButton"
        android:textSize="20dp"
        android:textColor="#fff9f9f9"
        android:background="#ff656565"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="28dp" />



</RelativeLayout>
