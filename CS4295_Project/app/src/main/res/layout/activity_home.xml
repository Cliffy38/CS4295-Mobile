<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="#ff86deff"
    android:id="@+id/background"
    android:clickable="true">

    <TextView android:text="FitFit   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:textStyle="bold"
        android:textSize="70sp"
        android:background="#ff54b0ff"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:layout_marginTop="180dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Work Out"
        android:id="@+id/WorkOutButton"
        android:textSize="30dp"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/home"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Run"
        android:id="@+id/RunButton"
        android:textSize="30dp"
        android:layout_below="@+id/WorkOutButton"

        android:layout_marginTop="53dp"
        android:layout_alignLeft="@+id/WorkOutButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/SettingButton"
        android:textSize="30dp"
        android:textColor="#ff4b4b4b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="68dp" />



</RelativeLayout>
